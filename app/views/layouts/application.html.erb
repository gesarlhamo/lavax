<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "font-awesome/css/font-awesome.min.css" %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Droid+Serif", "http://fonts.googleapis.com/css?family=Droid+Sans" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "https://js.stripe.com/v1/" %>
  <%= csrf_meta_tags %>
  <%= render "layouts/shim" %>
  <%= render "layouts/googleanalytics" %>
</head>
<body>
<div class="container">
  <%= render "layouts/header" %>
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <%= yield %>
  <%= render "layouts/order_now" if !yield(:title).include? 'rder' %>
  <%= render "layouts/footer" %>
</div>
<%= render "layouts/backstretch" %>
</body>

</html>
